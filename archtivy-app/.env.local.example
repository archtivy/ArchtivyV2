# Clerk (https://clerk.com) – optional for local run; use placeholders until you add keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxx
CLERK_SECRET_KEY=sk_test_xxxx

# Supabase (https://supabase.com)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Server-only: used by Server Actions and /api/explore (bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Mapbox (https://mapbox.com) – for /explore map
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your-mapbox-public-token
# Server-only Mapbox token for admin mapbox suggest API (falls back to NEXT_PUBLIC_MAPBOX_TOKEN)
MAPBOX_TOKEN=pk.your-mapbox-public-token

# Resend (https://resend.com) – leads notifications + curated introductions
RESEND_API_KEY=re_xxxx
# Admin email: receives "Lead Pending Review" when a visitor submits a contact form
ADMIN_EMAIL=admin@example.com
# From address for lead emails (must be verified in Resend)
FROM_EMAIL=Archtivy <introductions@archtivy.com>
